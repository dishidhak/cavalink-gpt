FROM python:3.11-slim

# Create working directory
WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY src ./src
COPY assets ./assets
COPY frontend ./frontend

# Expose backend port
EXPOSE 5000

# Run Flask app
CMD ["python", "src/app.py"]
